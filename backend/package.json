{
  "name": "gestao-contabil-backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "API do Gestor Neto Contabilidade (Express + Prisma + TS)",
  "main": "dist/server.js",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch --env-file=.env src/server.ts",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "prisma:format": "prisma format",
    "prisma:gen": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "dump:processes": "tsx --env-file=.env src/scripts/dump_processes.ts"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "express": "^4.19.2",
    "node-cron": "^3.0.3",
    "pino": "^9.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/node-cron": "^3.0.11",
    "dotenv": "^16.4.5",
    "cross-env": "^7.0.3",
    "pino-pretty": "^11.2.2",
    "prisma": "6.19.0",
    "tsx": "^4.16.2",
    "typescript": "^5.9.3"
  }
}

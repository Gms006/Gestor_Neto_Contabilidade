datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

model Company {
  id          String     @id @default(cuid())
  externalId  String     @unique
  name        String
  identifier  String?
  email       String?
  raw         String?    // JSON serializado

  processes   Process[]
  deliveries  Delivery[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Process {
  id          String     @id @default(cuid())
  externalId  String     @unique
  title       String
  statusRaw   String?
  statusNorm  String?
  progress    Int?

  companyId   String?
  company     Company?   @relation(fields: [companyId], references: [id])
  raw         String?    // JSON serializado

  deliveries  Delivery[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Delivery {
  id          String     @id @default(cuid())
  externalId  String     @unique
  name        String?
  dueDate     DateTime?
  status      String?
  payload     String?    // JSON serializado

  processId   String?
  process     Process?   @relation(fields: [processId], references: [id])

  companyId   String?
  company     Company?   @relation(fields: [companyId], references: [id])

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([processId])
  @@index([companyId])
}

model SyncCursor {
  id        String   @id @default(cuid())
  kind      String   @unique // 'companies' | 'processes' | 'deliveries'
  lastDh    DateTime?
  updatedAt DateTime @updatedAt
}

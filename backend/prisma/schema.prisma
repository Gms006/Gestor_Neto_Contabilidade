datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id          String    @id @default(cuid())
  externalId  String    @unique
  cnpj        String?
  name        String?
  email       String?
  raw         Json?
  processes   Process[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Process {
  id          String    @id @default(cuid())
  externalId  String    @unique
  title       String?
  statusRaw   String?
  statusNorm  String?
  progress    Int?
  startedAt   DateTime?
  finishedAt  DateTime?
  companyId   String?
  company     Company?  @relation(fields: [companyId], references: [id])
  raw         Json?
  deliveries  Delivery[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Delivery {
  id          String    @id @default(cuid())
  externalId  String    @unique
  title       String?
  competence  String?
  situation   String?
  dueDate     DateTime?
  payload     Json?
  processId   String?
  process     Process?  @relation(fields: [processId], references: [id])
  companyId   String?
  company     Company?  @relation(fields: [companyId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model SyncCursor {
  id        String   @id @default("global")
  lastDH    DateTime?
  updatedAt DateTime @updatedAt
}

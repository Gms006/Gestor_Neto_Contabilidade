{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests", "src/controllers", "src/flows", "src/jobs", "src/app.ts", "src/services/obrigacoes.service.ts", "src/services/whatsapp.service.ts", "src/types", "src/utils/dates.ts"]
}
